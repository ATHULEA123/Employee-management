        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/signup.css">
    <title>Document</title>
</head>

<body>
    <div class="wrapper">
        <form action="/api/user/signUp" method="post">
            <h1>SIGN UP</h1>
            <div class="input-wrapper">
                <input type="username" placeholder="user name" name="username" class="input">
            </div>
            <div class="input-wrapper">
                <input type="email" placeholder="Enter email...." name="email" class="input">
            </div>
            <div class="input-wrapper">
                <input type="password" placeholder="enter password ..." name="password" class="input">
            </div>


            <div class="remember">

                <a href="#">forgot password ?</a>
            </div>
            <div class="btn"> <button type="submit">SIGN UP</button></div>
            <div class="registerlink">
                <p>already have an accout ?<a href="/login"> LOGIN </a></p>
            </div>
        </form>
    </div>
</body>

</html>